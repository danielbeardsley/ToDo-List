<h1>Listing items <%= @list ? "from #{@list.name}" : ''%></h1>

<table>
  <tr>
    <th>Title</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.title %></td>
    <td><%= link_to 'Show', item, :class => 'show' %></td>
    <td><%= link_to 'Edit', edit_item_path(item), :class => 'edit' %></td>
    <td><%= link_to 'Delete', item, :confirm => 'Are you sure you want to delete this item?', :method => :delete, :class => 'delete' %></td>
  </tr>
<% end %>
</table>


<%= link_to 'New item', new_list_item_path(@list),:class => 'create' %>
<%= link_to 'Home', buttons_page, :class => 'home' %>