<h1><%=@list.new_record? ? 'Creating' : 'Editing' %> List</h1>

<% form_for(@list) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= link_to_function(
      (@list.new_record? ? 'Create' : 'Update'),
      "document.getElementById('#{@list.new_record? ? 'new_list' : ('edit_list_' + @list.id.to_s) }').submit();",
      :class => 'create')%>
  </p>
<% end %>

<%= link_to 'Show', @list %>
<%= link_to 'Back', lists_path %>