<h1>Lists</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Current item</th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%=h list.name %></td>
    <td><%=list.current_item ? h(list.current_item.title) : "<div class='empty'>(none)</div>" %></td>
    <td><%= link_to 'Show', list, :class => 'show' %></td>
    <td><%= link_to 'Edit', edit_list_path(list), :class => 'edit' %></td>
    <td><%= link_to 'Destroy', list, :confirm => 'Are you sure?', :method => :delete, :class => 'delete' %></td>
  </tr>
<% end %>
</table>


<%= link_to 'New list', new_list_path, :class => 'create' %>
<%= link_to 'Home', buttons_page, :class => 'home' %>